{



    "express": {
           "view cache": false,
           "view engine": "jade",
           "views": "path:./public/templates/"
       },

       "view engines": {
           "jade": {
               "module": "jade",
               "renderer": "__express"
           }
       },







    "i18n": {
        "contentPath": "path:./locales",
        "fallback": "en-US"
    },


    "specialization": {
    },

    "middleware": {


        "expressView": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "engine-munger/lib/expressView"
            }
        },


        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        }

    }
}
